{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build IAR Project",
            "type": "shell",
            "command": "iarbuild",
            "args": [
                "${workspaceFolder}\\project\\iar\\project_config\\cyt2bl3.ewp",
                "-build",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "iar",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*)\\((\\d+)\\)\\s*:\\s*(error|warning|info)\\s*:\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "Clean IAR Project",
            "type": "shell",
            "command": "iarbuild",
            "args": [
                "${workspaceFolder}\\project\\iar\\project_config\\cyt2bl3.ewp",
                "-clean",
                "Debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Rebuild IAR Project",
            "type": "shell",
            "command": "iarbuild",
            "args": [
                "${workspaceFolder}\\project\\iar\\project_config\\cyt2bl3.ewp",
                "-rebuild",
                "Debug"
            ],
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["Clean IAR Project"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Open IAR Workbench",
            "type": "shell",
            "command": "start",
            "args": [
                "${workspaceFolder}\\project\\iar\\cyt2bl3.eww"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
